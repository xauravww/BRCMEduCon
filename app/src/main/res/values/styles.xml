<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SpinnerTheme">
        <item name="android:textColor">@color/fontPrimary</item>
        <item name="android:fontFamily">@font/no_to_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyTextInputLayout" parent="parent">
        <item name="android:background">@drawable/grey_bg</item>
        <item name="hintTextColor">#333333</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


</resources>