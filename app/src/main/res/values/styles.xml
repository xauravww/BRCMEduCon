<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SpinnerTheme">
        <item name="android:textColor">@color/fontPrimary</item>
        <item name="android:fontFamily">@font/no_to_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/green_4ac687</item>
        <item name="android:textSize">12sp</item> <!-- Changed from dp to sp for text size -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">12sp</item> <!-- Changed from dp to sp for text size -->
        <item name="android:backgroundTint">@color/primaryTextColor</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:textColor">@color/com_facebook_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerHintText" parent="parent">
        <item name="android:textSize">12sp</item> <!-- Changed from dp to sp for text size -->
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

</resources>