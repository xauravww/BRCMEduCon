<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SpinnerTheme">
        <item name="android:textColor">@color/fontPrimary</item>
        <item name="android:fontFamily">@font/no_to_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/green_4ac687</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">12sp</item>
        <item name="android:backgroundTint">@color/primaryTextColor</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:textColor">@color/com_facebook_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerHintText" parent="parent">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="modifiedTextView" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FF000000</item>

    </style>

    <style name="MyTextInputLayout" parent="parent">
        <item name="android:background">@drawable/grey_bg</item>
        <item name="hintTextColor">#333333</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

</resources>