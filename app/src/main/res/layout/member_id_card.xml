<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GreenTransparent"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingTop="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:paddingBottom="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@drawable/brcm_logo_big" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WhiteTransparent3">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background=""
            app:elevation="5dp">

            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_transparent">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/close"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:contentDescription="@string/brcm"
                    android:scaleX="1.5"
                    android:src="@drawable/splash_img"
                    app:riv_corner_radius_top_left="10dp"

                    app:riv_corner_radius_top_right="10dp" />

            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bar"
            android:background="@drawable/background_transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/textViewLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:text="BRCM Engineering &amp; Technology "
                        android:textColor="@color/dark_blue"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/myName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Myname"
                            android:textColor="@color/yahooRed"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/myAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(20 years)"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/grey_bg"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    app:strokeColor="@android:color/darker_gray"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/name_label"
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name:" />

                            <TextView
                                android:id="@+id/fullname"
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:text="name" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/roll_label"
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Roll No:" />

                            <TextView
                                android:id="@+id/roll_number"
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:text="1234" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date Of Birth:" />

                            <TextView
                                android:id="@+id/dob"
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:text="13/8/2020" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Father Name:" />

                            <TextView
                                android:id="@+id/fatherName"
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:text="Mr  Name" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email:" />

                            <TextView
                                android:id="@+id/email"
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:text="sam@gmail.com" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile no.:" />

                            <TextView
                                android:id="@+id/mobileNo"
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:text="9090909090" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reg. No.:" />

                            <TextView
                                android:id="@+id/regNo"
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:text="76830123456" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Batch Year" />

                            <TextView
                                android:id="@+id/batchYear"
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:text="2020" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Student Id:" />

                            <TextView
                                android:id="@+id/studentId"
                                style="@style/modifiedTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:text="2345" />

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

