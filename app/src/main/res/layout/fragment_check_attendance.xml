<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.faculty_dashboard_fragments.CheckAssignmentsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFacultyProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/smooth_corner_shape"
        android:elevation="5dp"
        android:layout_margin="5dp">

        <Spinner
            android:id="@+id/assignmentTitleSpinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/txtName"
            android:textAlignment="center"
            android:padding="5dp"
            android:layout_marginHorizontal="5dp"
            />
    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewAssignments"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>