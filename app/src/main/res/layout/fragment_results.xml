<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.student_dashboard_fragments.ResultsFragment">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Results"
                android:textSize="25sp"
                android:fontFamily="@font/montserrat_extrabold"
                android:textAlignment="center"
                android:padding="20dp"

                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgStudentProfile"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@drawable/human_image"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"

                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imgStudentProfile"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:padding="10dp"

                    >
                    <TextView
                        android:id="@+id/txtStudentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hans Kumar"
                        android:fontFamily="@font/montserrat_extrabold"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/txtStudentRollNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 cse 4375"
                        android:textSize="18sp"
                        android:layout_below="@id/txtStudentName"
                        />
                    <TextView
                        android:id="@+id/txtYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtStudentRollNo"
                        android:text="Final Year"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/txtRegNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtYear"
                        android:text="2010031024"
                        android:textSize="18sp"
                        />
                </RelativeLayout>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/middle"
            android:layout_marginBottom="100dp"
            >
            <RelativeLayout
                android:id="@+id/svwrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="10dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rl1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/smooth_corner_shape"
                        android:backgroundTint="#dadada"
                        >
                        <ImageView
                            android:id="@+id/imgsem1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/baseline_lock_open_24"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:id="@+id/txtSem1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sem1"
                            android:layout_below="@id/imgsem1"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_below="@id/first"
                    app:cardCornerRadius="10dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rl2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/smooth_corner_shape"
                        android:backgroundTint="#dadada"
                        >
                        <ImageView
                            android:id="@+id/imgsem2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/baseline_lock_open_24"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:id="@+id/txtSem2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sem2"
                            android:layout_below="@id/imgsem2"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/third"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_below="@id/second"
                    app:cardCornerRadius="10dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rl3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/smooth_corner_shape"
                        android:backgroundTint="#dadada"
                        >
                        <ImageView
                            android:id="@+id/imgsem3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/baseline_lock_open_24"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:id="@+id/txtSem3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sem3"
                            android:layout_below="@id/imgsem3"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/forth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_below="@id/third"
                    app:cardCornerRadius="10dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rl4"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/smooth_corner_shape"
                        android:backgroundTint="#dadada"
                        >
                        <ImageView
                            android:id="@+id/imgsem4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/baseline_lock_open_24"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:id="@+id/txtSem4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sem4"
                            android:layout_below="@id/imgsem4"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/fifth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_below="@id/forth"
                    app:cardCornerRadius="10dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rl5"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/smooth_corner_shape"
                        android:backgroundTint="#dadada"
                        >

                        <ImageView
                            android:id="@+id/imgsem5"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/baseline_lock_open_24" />
                        <TextView
                            android:id="@+id/txtSem5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sem5"
                            android:layout_below="@id/imgsem5"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/sixth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_below="@id/fifth"
                    app:cardCornerRadius="10dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rl6"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/smooth_corner_shape"
                        android:backgroundTint="#dadada"
                        >
                        <ImageView
                            android:id="@+id/imgsem6"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/baseline_lock_open_24"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:id="@+id/txtSem6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sem6"
                            android:layout_below="@id/imgsem6"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/seventh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_below="@id/sixth"
                    app:cardCornerRadius="10dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rl7"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/smooth_corner_shape"
                        android:backgroundTint="#dadada"
                        >
                        <ImageView
                            android:id="@+id/imgsem7"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/baseline_lock_open_24"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:id="@+id/txtSem7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sem7"
                            android:layout_below="@id/imgsem7"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/eightth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_below="@id/seventh"
                    app:cardCornerRadius="10dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rl8"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/smooth_corner_shape"
                        android:backgroundTint="#dadada"
                        >
                        <ImageView
                            android:id="@+id/imgsem8"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/baseline_lock_24"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:id="@+id/txtSem8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sem8"
                            android:layout_below="@id/imgsem8"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>


